# Worker Configuration
WORKER_NAME=Worker Node Demo 01
WORKER_TYPE=vps
WORKER_ID=

# Master Node Connection (Pointing to running master)
MASTER_URL=http://localhost:3000
MASTER_API_KEY=

# Worker Capabilities
MAX_CONCURRENT_JOBS=3
MEMORY_MB=4096
CPU_CORES=4
STORAGE_GB=50

# Browser Configuration
HEADLESS=true
BROWSER_EXECUTABLE_PATH=

# Proxy Configuration (optional)
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_PROTOCOL=http

# AI Configuration (Disable for demo)
OPENAI_API_KEY=
GEMINI_API_KEY=
ENABLE_AI_SCENARIOS=false
AI_SCENARIO_CACHING=false

# Advanced Settings
HEARTBEAT_INTERVAL=30000
JOB_TIMEOUT=300000
AUTO_ACCEPT_JOBS=true
DEBUG=true
STATUS_PORT=3002

# Security
TRUSTED_IPS=localhost,127.0.0.1
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_JOBS_PER_HOUR=100
